{% extends 'base.html.twig' %}

{% block body %}


    <h1 class="display-3 text-center">BILLETTERIE</h1>

    <div class="container">
        <div class="row">
            <div class="col-12">

            <div class="card-header">Récapitulatif des billets</div>
            <div class="card-body">
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Prix (en €)</th>
                </tr>
                </thead>
                <tbody>
                {% for billet in commande.billets %}
                    <tr>
                    <td>{{ billet.nom }}</td>
                    <td>{{ billet.prenom }}</td>
                    <td>{{ billet.prix }}</td>
                    </tr>{% endfor %}
                </tbody>
            </table>
            <div class="card-header">Récapitulatif de la commande</div>
            <div class="card-body">
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th>Nombre de billet(s)</th>
                    <th>Adresse email</th>
                    <th>Prix Total(en €)</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <td>{{ commande.NbBillet -1}}</td>
                    <td>{{ commande.email }}</td>
                    <td>{{ commande.prixTotal }}</td>
                </tr>
                </tbody>
            </table>

            <form action="{{ path('success') }}" method="POST">
                <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="pk_test_kkpH5Knrf26xwya6kRvIHAw4"
                        data-amount="{{ commande.prixTotal *100 }}"
                        data-name="Stripe.com"
                        data-description="Example charge"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                        data-locale="auto"
                        data-zip-code="true">
                </script>
            </form>
            <br><br><br>
        </div>

    </div>
{% endblock %}


